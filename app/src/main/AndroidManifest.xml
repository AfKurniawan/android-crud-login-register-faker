<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.faidnawa.latihanandroidcrud">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Crud"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".Login2Activity" />
        <activity android:name=".forgetpass" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme"
            android:parentActivityName=".About"/>
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".About" />
        <activity
            android:name=".chet"
            android:label="@string/title_activity_chet"
            android:theme="@style/AppTheme"
            android:parentActivityName=".chet">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chet" />

        </activity>
        <activity android:name=".userchat"></activity>
    </application>

</manifest>